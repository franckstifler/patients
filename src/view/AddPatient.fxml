<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.Group?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<Group xmlns="http://javafx.com/javafx/8.0.102-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddPatientController">
    <children>
        <BorderPane prefWidth="400" prefHeight="400">
            <top>
                <HBox alignment="CENTER">
                    <children>
                        <Label text="Add new patient">
                            <font>
                                <Font size="24" />
                            </font>
                        </Label>
                    </children>
                </HBox>
            </top>
            <center>
                <VBox alignment="CENTER" spacing="30">
                    <children>
                        <HBox alignment="CENTER" spacing="50">
                            <children>
                                <Label text="patient name : " />
                                <TextField fx:id="pname" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="50">
                            <children>
                                <Label text="patient surname : " />
                                <TextField fx:id="psurname" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="50">
                            <children>
                                <Label text="patient phone : " />
                                <TextField fx:id="pphone" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="50">
                            <children>
                                <Label text="patient email : " />
                                <TextField fx:id="email" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="50">
                            <children>
                                <Label text="patient location : " />
                                <TextField fx:id="plocation" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </children>
</Group>
